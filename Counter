library IEEE;
use IEEE.std_logic_1164.all;

entity counter is
    Port ( boton : in STD_LOGIC;
           code : out STD_LOGIC_VECTOR (3 downto 0);
           rst, clk: in std_logic
           );
end counter;


architecture Behavioral of counter is

begin
    process(boton, rst, clk)
    subtype C_t is unsigned(3 downto 0);
    variable contador: C_t := to_unsigned(0,4) ;        --unsigned no es integer sin signo, ojo.
    begin
        if (rst = '1') then
            contador := to_unsigned(0,4);
        elsif (clk'event and clk = '1') then
            if boton = '1' then
            contador := (contador + 1)mod(10);
            end if;
        end if;
        code <= std_logic_vector(contador);             -- no hace falta especificar dimension porque unsigned ya la tiene. Otra cosa es si lo pasamos desde
    end process;                                        -- integer.
end Behavioral;
