library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
USE IEEE.NUMERIC_STD.ALL;
use IEEE.STD_LOGIC_UNSIGNED.ALL;


entity Carretera is
  PORT( 
        rst, clk: IN std_logic;
        Estado: IN STD_LOGIC_VECTOR(2 DOWNTO 0);
        PosicionI: OUT INTEGER RANGE 5 to 15; -- Posicion del limite Izquierdo
        PosicionD: OUT INTEGER RANGE 0 to 10; -- Posicion del limite Derecho
        finCarrera: OUT STD_LOGIC
  );
end Carretera;

architecture Behavioral of Carretera is

COMPONENT GPClock is --Componente para el juego de carretera 
generic (TIMER, WIDTH: INTEGER); --FRECUENCIA DE NUESTROS RELOJES INDIVIDUALES
port (
    clk: in STD_LOGIC;
    rst: IN STD_LOGIC;
    Selector: out STD_LOGIC_VECTOR (WIDTH-1 DOWNTO 0) --La seÃ±al que va a cambiar segun el reloj dividido.
);
end COMPONENT;

SIGNAL Temporizador: STD_LOGIC_VECTOR (9 DOWNTO 0);
SIGNAL Temporizador2: STD_LOGIC_VECTOR (4 DOWNTO 0);
SIGNAL Nivel: STD_LOGIC_VECTOR (1 DOWNTO 0);


BEGIN


inst_GPClock_Carretera1: GPClock -- Divisor de frecuencia para el LVL 1
     GENERIC MAP (TIMER => 50000000, WIDTH => 10)
     PORT MAP(Selector => Temporizador, clk => clk, rst => rst);
     
inst_GPClock_Carretera2: GPClock -- Divisor de frecuencia para el LVL 2
          GENERIC MAP (TIMER => 100000000, WIDTH => 5)
          PORT MAP(Selector => Temporizador2, clk => clk, rst => rst);
          
inst_GPClock_SelectorTipodeNive: GPClock -- Eligira el tipo de nivel que se jugara en el Lvl 2
                    GENERIC MAP (TIMER => 2100000000, WIDTH => 2)
                    PORT MAP(Selector => Nivel, clk => clk, rst => '1');



  PROCESS (clk, rst)

  BEGIN
  
    IF (rst = '0') THEN 
        PosicionD <= 0;
        PosicionI <= 5;
        finCarrera <= '0';
    ELSIF (clk'event and clk = '1') THEN
      
        CASE Estado IS
            WHEN "001" => -- LVL 1, carretera preprogramada de Alex
              finCarrera <= '0';
              CASE Temporizador IS
                WHEN "0000000000" =>
                  PosicionD <= 0;
                  PosicionI <= 5;
                WHEN "0000001000" => -- 500ms
                  PosicionD <= 1;
                  PosicionI <= 6;
                WHEN "0000001010" => -- 1500ms
                  PosicionD <= 2;
                  PosicionI <= 7;
                WHEN "0000001100" => -- 3000ms
                  PosicionD <= 3;
                  PosicionI <= 8;
                WHEN "0000010000" => -- 3250ms
                  PosicionD <= 4;
                  PosicionI <= 9;
                WHEN "0000010100" => --         0000010100
                  PosicionD <= 5;
                  PosicionI <= 10;
                WHEN "0000011001" => -- 4100ms    0000011001
                  PosicionD <= 6;
                  PosicionI <= 11;
                WHEN "0000011110" => -- 4500ms    0000011110
                  PosicionD <= 7;
                  PosicionI <= 12;
                WHEN "0000100011" => -- 4750ms    0000100011
                  PosicionD <= 8;
                  PosicionI <= 13;
                WHEN "0000101000" => -- 5000ms     0000101000
                  PosicionD <= 9;
                  PosicionI <= 14;
                WHEN "0000101101" => -- 5250ms      0000101101
                  PosicionD <= 10;
                  PosicionI <= 15;
                WHEN "0000110010" => -- 5500ms      0000110010
                  PosicionD <= 9;
                  PosicionI <= 14;
                WHEN "0000110111" => -- 5750ms      0000110111
                  PosicionD <= 8;
                  PosicionI <= 13;
                WHEN "0000111100" => -- 6000ms      0000111100
                  PosicionD <= 7;
                  PosicionI <= 12;
                WHEN "0001000001" => -- 6250ms      0001000001
                  PosicionD <= 6;
                  PosicionI <= 11;
                WHEN "0001000110" => -- 7000ms      0001000110
                  PosicionD <= 5;
                  PosicionI <= 10;
                WHEN "0001001011" => -- 7500ms      0001001011
                  PosicionD <= 4;
                  PosicionI <= 9;
                WHEN "0001010000" => -- 8000ms      0001010000
                  PosicionD <= 3;
                  PosicionI <= 8;
                WHEN "0001010101" => -- 9000ms      0001010101    
                  PosicionD <= 2;
                  PosicionI <= 7;
                WHEN "0001011010" => -- 10000ms     0001011010
                  PosicionD <= 1;
                  PosicionI <= 6;
                WHEN "0001011111" => -- 10250ms     0001011111
                  PosicionD <= 0;
                  PosicionI <= 5;
                  finCarrera <= '1';
                WHEN OTHERS =>
                  
                END CASE;
            WHEN "010" => -- LVL 2,  Carretera pseudoaleatoria
            
                finCarrera <= '0';

                CASE Temporizador2 IS
                    WHEN "00000" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 0;
                            PosicionI <= 5;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 0;
                            PosicionI <= 5;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 0;
                            PosicionI <= 5;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 0;
                            PosicionI <= 5;
                        END IF;
                    WHEN "00001" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 0;
                            PosicionI <= 5;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        END IF;             
                    WHEN "00010" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 0;
                            PosicionI <= 5;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        END IF;
                    WHEN "00011" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 0;
                            PosicionI <= 5;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        END IF;     
                    WHEN "00100" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 0;
                            PosicionI <= 5;
                        END IF;
                    WHEN "00101" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        END IF;             
                    WHEN "00110" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        END IF;
                    WHEN "00111" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        END IF;
                    WHEN "01000" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 6;
                            PosicionI <= 11;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 3;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        END IF;
                    WHEN "01001" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        END IF;             
                    WHEN "01010" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 6;
                            PosicionI <= 11;
                        END IF;
                    WHEN "01011" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 7;
                            PosicionI <= 12;
                        END IF;     
                    WHEN "01100" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 6;
                            PosicionI <= 11;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 8;
                            PosicionI <= 13;
                        END IF;
                    WHEN "01101" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 7;
                            PosicionI <= 12;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 6;
                            PosicionI <= 11;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 9;
                            PosicionI <= 12;
                        END IF;             
                    WHEN "01110" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 6;
                            PosicionI <= 11;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 10;
                            PosicionI <= 14;
                        END IF;
                    WHEN "01111" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 4;
                            PosicionI <= 9;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 9;
                            PosicionI <= 14;
                        END IF;                                   
                    WHEN "10000" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 6;
                            PosicionI <= 11;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 3;
                            PosicionI <= 8;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 8;
                            PosicionI <= 13;
                        END IF;             
                    WHEN "10001" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 7;
                            PosicionI <= 12;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 6;
                            PosicionI <= 11;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 2;
                            PosicionI <= 7;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 7;
                            PosicionI <= 12;
                        END IF;
                    WHEN "10010" =>                   
                        IF (NIVEL = "00") THEN
                            PosicionD <= 8;
                            PosicionI <= 13;
                        ELSIF (NIVEL = "01") THEN
                            PosicionD <= 5;
                            PosicionI <= 10;
                        ELSIF (NIVEL = "10") THEN
                            PosicionD <= 1;
                            PosicionI <= 6;
                        ELSIF (NIVEL = "11") THEN
                            PosicionD <= 6;
                            PosicionI <= 11;
                        END IF;                                   
                        
                    WHEN "10100" =>
                        finCarrera <= '1';
                        
                    WHEN OTHERS =>
              
                END CASE;

            WHEN OTHERS =>
    END CASE;
    END IF;

  END PROCESS;
  
END ARCHITECTURE;
